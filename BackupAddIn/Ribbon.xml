<?xml version="1.0" encoding="UTF-8"?>
<customUI onLoad="Ribbon_Load" xmlns="http://schemas.microsoft.com/office/2009/07/customui">
    <ribbon>
        <tabs>
            <tab id="ribTabBackup" getLabel="GetLabel">
                <group id="ribBtnBackup" getLabel="GetLabel">
                    <button id="btnBackupSettings" imageMso="DatabaseCopyDatabaseFile" getEnabled="IsAccessingSettingsAllowed" onAction="OpenBackupSettings" getLabel="GetLabel" showImage="true" size="large" />
                    <button id="btnBackupOnExit" imageMso="FileExit" getEnabled="IsAccessingSettingsAllowed" onAction="ScheduleBackupOnExit" getLabel="GetLabel" showImage="true" size="large" />
                </group>
            </tab>
        </tabs>
    </ribbon>
</customUI>